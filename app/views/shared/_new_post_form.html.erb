<div class="post_form">
  <h3>イチゲイを新規登録</h3>
  <%= render 'layouts/errors', obj: post %>
  <%= form_for(post) do |f| %>
      <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :title, class: "", value: nil, :size=>"50" %>
      </div>
      <div class="field">
        <%= f.label :content %><br>
        <%= f.text_area :content, class: "", value: nil, :size=>"50" %>
      </div>
      <div class="field">
        <%= f.label :url %><br>
        <%= f.text_field :url, class: "", value: nil, :size=>"50" %>
      </div>
      <div class="field">
        <%= f.label "画像" %><br>
        <%= f.attachment_field :image %>
      </div>
      <div class="field">
        <%= f.label "イチゲイのジャンル" %><br>
        <%= f.collection_select :category, Category.all, :id, :name, {include_blank: '選択してください'} %>
      </div>
      <div class="">
        <%= f.submit "新たなイチゲイとして投稿する", method: :post, class: "btn btn-primary"  %>
      </div>
    <% end %>
</div>