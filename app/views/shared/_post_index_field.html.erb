<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% user.posts.each do |post| %>
      <tr>
        <td>
          <%= link_to(post.user) do %>
            <%= attachment_image_tag(post.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
          <% end %>
        </td>
        <td><%= link_to post.title, post_path(post), class: "post_#{post.id}" %></td>
        <td><%= book.body %></td>
        <td class=<%= "table__favorite--" + book.id.to_s %>>
          <%= render 'pubulic/shared/favorites', post: post, user: user %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>