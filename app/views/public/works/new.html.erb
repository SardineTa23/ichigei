<h2>募集の新規登録</h2>
<%= form_for(@work) do |f|%>
  <div class="field">
    <%= f.label '求人タイトル'%><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label '求人内容説明'%><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label '応募条件' %><br>
    <%= f.text_area :condition %>
  </div>
  <div class="field">
    <%= f.label 'カテゴリーを選択' %>
    <%= f.collection_select :category, Category.all, :id, :name, {include_blank: '選択してください'} %>
  </div>
  <div class="field">
    <%= f.label '配布ポイント' %><br>
    <%= f.number_field :reward %>
  </div>
  <div class="field">
    <%= f.label '画像をアップロード' %>
    <p class="img-1">画像1：<%= f.attachment_field :images_images, multiple: true %></p>
    <p class="img-2">画像2：<%= f.attachment_field :images_images, multiple: true %></p>
    <p class="img-3">画像3：<%= f.attachment_field :images_images, multiple: true %></p>
    <p class="img-4">画像4：<%= f.attachment_field :images_images, multiple: true %></p>
    <p class="img-5">画像5：<%= f.attachment_field :images_images, multiple: true %></p>
    <p class="img-6">画像6：<%= f.attachment_field :images_images, multiple: true %></p>
  </div>
  <div class="field">
    <%= f.label :started_at, '勤務開始日時' %>
    <%= raw sprintf(
      f.datetime_select(
        :started_at,
        {
          start_year:     Time.zone.now.year,# 選択可能な開始年
          end_year:       Time.zone.now.next_year.year,# 選択可能な終了年
          default:        Time.zone.now,# デフォルトの年
          use_two_digit_numbers: true,# 月日を2桁の値で表示
          date_separator: '%s',# 年, 月
          datetime_separator: '%s',# 日
          time_separator: '%s'# 時
        },# オプション
        { class: 'date-select' }# htmlオプションを指定する場合は別で指定
      ),
      '年 ', '月 ', '日 ', '時 ') + '分'# 分 は最後につけ加えられる
    %>
  </div>
  <div class="field">
    <%= f.label :ended_at, '勤務終了日時' %>
    <%= raw sprintf(
      f.datetime_select(
        :ended_at,
        {
          start_year:     Time.zone.now.year,# 選択可能な開始年
          end_year:       Time.zone.now.next_year.year,# 選択可能な終了年
          default:        Time.zone.now,# デフォルトの年
          use_two_digit_numbers: true,# 月日を2桁の値で表示
          date_separator: '%s',# 年, 月
          datetime_separator: '%s',# 日
          time_separator: '%s'# 時
        },# オプション
        { class: 'date-select' }# htmlオプションを指定する場合は別で指定
      ),
      '年 ', '月 ', '日 ', '時 ') + '分'# 分 は最後につけ加えられる
    %>
  </div>
  
  <div class="field row">
  </div>
  <div class="field row">
  </div>
  <div class="field row">
  </div>
  <div class="field row">
  </div>
  <div class="field row">
  </div>

  <div>
  　　<%= f.submit '求人を作成する' , class: "btn btn-primary col-xs-5"%>
  </div>
  
<% end %>