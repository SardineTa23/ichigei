<h2>募集の新規登録</h2>
<%= form_for(@work) do |f|%>
  <div class="field">
    <%= f.label '求人タイトル'%><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label '求人内容説明'%><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label '応募条件' %><br>
    <%= f.text_area :condition %>
  </div>
  <div class="field">
    <%= f.label 'カテゴリーを選択' %>
    <%= f.collection_select :category, Category.all, :id, :name, {include_blank: '選択してください'} %>
  </div>
  <div class="field">
    <%= f.label '配布ポイント' %><br>
    <%= f.number_field :reward %>
  </div>
  <div class="field">
    <%= f.label '画像をアップロード' %><br>
    <p class="img-1">画像1：<%= f.attachment_field :image, multiple: true, direct: true, presigned: true %></p>
  </div>
  <div class="field">
    <%= f.label :started_at, '勤務開始日時' %>
    <%= raw sprintf(
      f.datetime_select(
        :started_at,
        {
          start_year:     Time.zone.now.year,
          end_year:       Time.zone.now.next_year.year,
          default:        Time.zone.now,
          use_two_digit_numbers: true,
          date_separator: '%s',
          datetime_separator: '%s',
          time_separator: '%s'
        },
        { class: 'date-select' }
      ),
      '年 ', '月 ', '日 ', '時 ') + '分'
    %>
  </div>
  <div class="field">
    <%= f.label :ended_at, '勤務終了日時' %>
    <%= raw sprintf(
      f.datetime_select(
        :ended_at,
        {
          start_year:     Time.zone.now.year,
          end_year:       Time.zone.now.next_year.year,
          default:        Time.zone.now,
          use_two_digit_numbers: true,
          date_separator: '%s',
          datetime_separator: '%s',
          time_separator: '%s'
        },
        { class: 'date-select' }
      ),
      '年 ', '月 ', '日 ', '時 ') + '分'
    %>
  </div>
  
  <div class="field">
    <%= f.select :recruitment_status, Work.recruitment_statuses_i18n.keys.map { |k| [Work.recruitment_statuses_i18n[k], k] } %>
  </div>
  <div class="field row">
  </div>
  <div class="field row">
  </div>
  <div class="field row">
  </div>
  <div class="field row">
  </div>

  <div>
  　　<%= f.submit '求人を更新する' , class: "btn btn-primary col-xs-5"%>
  </div>
<% end %>