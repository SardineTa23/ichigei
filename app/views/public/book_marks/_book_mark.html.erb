<% if work.book_marked_by?(current_user) %>
    <%= link_to work_book_marks_path(work), method: :delete, remote: true do %>
      <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
      <p>ブックマーク解除</p>
    <% end %>
<% else %>
    <%= link_to work_book_marks_path(work), method: :post, remote: true do %>
      <i class="fa fa-heart-o" aria-hidden="true"></i>
      <p>ブックマークする</p>
    <% end %>
<% end %>
